{
  "name": "sedi-tablette-backend",
  "version": "1.0.0",
  "description": "Backend API pour l'interface tablette SEDI ERP",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test:email": "node test-email-production.js",
    "test": "node tests/native-tests.js",
    "test:complete": "node tests/complete-tests.js",
    "test:all": "npm run test && npm run test:complete",
    "test:vitest": "vitest",
    "test:vitest:run": "vitest run",
    "test:vitest:ui": "vitest --ui",
    "test:vitest:coverage": "vitest run --coverage",
    "test:vitest:watch": "vitest --watch",
    "test:ci": "vitest run --reporter=verbose --coverage",
    "test:integration": "vitest run --config vitest.config.mjs --runInBand",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "lint:report": "eslint . --ext .js --format json --output-file eslint-report.json",
    "test:security": "node scripts/security-test.js || echo 'Security tests skipped (server not running)'",
    "test:health": "curl -f http://localhost:3001/api/health || echo 'Health check skipped (server not running)'",
    "sonar": "sonar-scanner",
    "quality": "npm run lint:report && npm run sonar",
    "test:full": "npm run test:all && npm run quality"
  },
  "keywords": [
    "sedi",
    "erp",
    "tablette",
    "api"
  ],
  "author": "SEDI",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "axios": "^1.6.0",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "mssql": "^12.0.0",
    "node-fetch": "^2.7.0",
    "nodemailer": "^7.0.9",
    "prom-client": "^15.1.0"
  },
  "devDependencies": {
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.38.0",
    "nodemon": "^3.0.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}

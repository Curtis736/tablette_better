{
  "name": "sedi-tablette-backend",
  "version": "1.0.0",
  "description": "Backend API pour l'interface tablette SEDI ERP",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --testPathPattern=tests/",
    "test:watch": "jest --watch --testPathPattern=tests/",
    "test:health": "jest --testPathPattern=health.test.js",
    "test:integration": "jest --testPathPattern=integration.test.js",
    "test:security": "jest --testPathPattern=security.test.js",
    "test:performance": "jest --testPathPattern=performance.test.js",
    "test:coverage": "jest --coverage --testPathPattern=tests/",
    "test:ci": "jest --ci --coverage --testPathPattern=tests/ --maxWorkers=2",
    "test:all": "npm run test:health && npm run test:integration && npm run test:security && npm run test:performance",
    "lint": "echo 'Linting not configured'",
    "lint:fix": "echo 'Lint fix not configured'"
  },
  "keywords": [
    "sedi",
    "erp",
    "tablette",
    "api"
  ],
  "author": "SEDI",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "mssql": "^12.0.0",
    "node-fetch": "^2.7.0",
    "nodemailer": "^6.9.7"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
